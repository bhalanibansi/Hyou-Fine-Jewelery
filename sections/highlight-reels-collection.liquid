    .highligh_main_section .reel_inner {
      text-align: center;
      font-size: 18px;
      background: #fff;
      display: flex;
      justify-content: center;
      align-items: center;
      flex-direction: column;
    }
    .main_cst_reel .swiper-button-prev::after, .main_cst_reel  .swiper-button-next::after{
      display:none;
    }
    .highligh_main_section .reel_inner img.main-img{
      width: 100%;
      height: 100%;
      object-fit: cover;
    }
    .highligh_main_section .pro_img img{
      width:142px;
      height:150px;
      object-fit:cover;
    }
    .highlight_reel_main{
      position: relative;
    }
  .pro_img{
    position: absolute;
    right: 0;
    margin: 0 auto;
    text-align: center;
    left: 0;
    bottom: 66px;
  }
  .pro_img img{
    margin: 0 auto;
  }
  .product_detail{
    margin-top: 49px;
  }
  @media screen and (max-width: 575px){
    .highligh_main_section .pro_img img {
    width: 129px;
    height: 125px;
  }

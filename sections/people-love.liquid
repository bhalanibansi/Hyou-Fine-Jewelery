<section class="main-people-love section-{{ section.id }}-padding wrapper--full-padded">
  <div id="myModal" class="modal">
    <div class="modal-content">
      <span class="close">&times;</span>    
      <div id="modalContent"></div>
    </div>
  </div>

  <div class="people-love-header">
    <h2>{{ section.settings.heading }}</h2>
    <p>{{ section.settings.sub-text }}</p>
  </div>
  
  <div class="swiper main_cst_love">
    <div class="swiper-wrapper">
      {% for block in section.blocks %}
        <div class="swiper-slide">
          <div class="people_love">
            <div class="people-love-left">
              <div class="people_detail">
                {% if block.settings.human_pic != blank %}
                  <div class="clickable-image" data-type="image" data-src="{{ block.settings.human_pic | img_url: 'master' }}">
                    {{ block.settings.human_pic | img_tag }}
                  </div>
                {% endif %}
                <div class="people_subdetail">
                  <h5>{{ block.settings.name }}</h5>
                  <h6>{{ block.settings.designation }}</h6>
                </div>
              </div>
              <p>{{ block.settings.para_text }}</p>             
            </div>
            <div class="people-love-right">
              <div class="clickable-image" data-type="video" data-src="{{ block.settings.desk-video }}">
                <img src="{{ block.settings.client_img | img_url: 'master' }}" alt="{{ product.title }}" />
              </div>
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
    <div class="swiper-button-next">
     <svg xmlns="http://www.w3.org/2000/svg" width="9" height="16" viewBox="0 0 9 16" fill="none">

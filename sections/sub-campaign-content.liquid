<section class="i-quit-text-block i-quit-text-block--{{ section.id }}">
  <h2>{{ section.settings.heading }}</h2>
  <p>{{ section.settings.text }}</p>
</section>

{% style %}
.i-quit-text-block--{{ section.id }} {
  text-align: center;
  padding: 40px 20px;
  background-color: {{ section.settings.bg_color }};  
  color: #111; 
}
.i-quit-text-block--{{ section.id }} h2 {
  font-size: 32px;
  font-weight: bold;
  margin-bottom: 20px;
}
.i-quit-text-block--{{ section.id }} p {
  font-size: 15px;
  white-space: pre-line;
  line-height: 1.6;
  max-width: 600px;
  margin: 0 auto;
}
{% endstyle %}

{% schema %}
{
  "name": "Sub Campaign Content", 
  "settings": [
   {
      "type": "text",
      "label": "Heading",
     "id": "heading",
      "default": "I Quit"
    },
   {
      "type": "textarea",
      "label": "Quote Text",
     "id": "text",
      "default": "She steps out, not in haste, but in power.\nA deep breath. A silent exhale.\nNot escape but arrival."
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color",
      "default": "#f5f5f5"
    },
  ],
  "presets": [
    {
      "name": "Sub Campaign Content"
    }
  ]
}
{% endschema %}

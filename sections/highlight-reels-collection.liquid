    }
  }
   @media screen and (min-width:750px) {
       .section-{{ section.id }}-padding {
        padding-top: {{ section.settings.padding_top }}px;
        padding-bottom: {{ section.settings.padding_bottom }}px;
      }
  }
  @media screen and (max-width: 749px){
    .people-love-header h2 {
      font-size: 36px;
      padding: 0;
      margin: 0;
    }    
    .highligh_main_section .reel_inner img {
      max-width: 100%;
    }    
  }
 
</style>
<section class="main-highlight-reel section-{{ section.id }}-padding">
  <div class="wrapper--full-padded">
    <div class="highlight-reel-header">
       <h2>{{ section.settings.heading }}</h2>
       <p>{{ section.settings.sub-text }}</p>
     </div>
    <div class="swiper swiper-container main_cst_reel">
    
        <div class="highligh_main_section swiper-wrapper">
           {% for block in section.blocks %}
              <div class="highlight_reel_main swiper-slide">
                <a href="{{ block.settings.url }}" class="reel_inner">
                  <img src="{{ block.settings.human_pic | img_url: 'master' }}" alt="Alt Text Here" class="main-img" />
                  {% assign product = all_products[block.settings.product-image] %}
                  {% assign first_image = product.images.first %}
                  <div class="pro_img"> 
                      {% if block.settings.custom-img2 != blank  %}
                        <img src="{{ block.settings.custom-img2 | img_url: 'master' }}" />                           
                      {% else %}
                        <img src="{{ block.settings.custom-img2 | img_url: 'master' }}" />  
                      {% endif %}
                   </div>
                   <div class="product_detail"> 
                     <p>{{ block.settings.collection-title }}</p> 
                   </div>
                </a>
             </div>
          {% endfor %}
    
    
        
                  
      
      </div>          
        <div class="swiper-button-next">
              <svg xmlns="http://www.w3.org/2000/svg" width="9" height="16" viewBox="0 0 9 16" fill="none">
                <path d="M8.70885 7.29289C9.09937 7.68342 9.09937 8.31658 8.70885 8.70711L2.34489 15.0711C1.95436 15.4616 1.3212 15.4616 0.930675 15.0711C0.540151 14.6805 0.540151 14.0474 0.930675 13.6569L6.58753 8L0.930675 2.34315C0.540151 1.95262 0.540151 1.31946 0.930675 0.928932C1.3212 0.538408 1.95436 0.538408 2.34489 0.928932L8.70885 7.29289ZM6.31055 7L8.00174 7V9L6.31055 9V7Z" fill="black"/>
              </svg>
          </div>
          <div class="swiper-button-prev">  
              <svg xmlns="http://www.w3.org/2000/svg" width="9" height="16" viewBox="0 0 9 16" fill="none">
                  <path d="M0.29286 7.29289C-0.0976648 7.68342 -0.0976648 8.31658 0.29286 8.70711L6.65682 15.0711C7.04734 15.4616 7.68051 15.4616 8.07103 15.0711C8.46156 14.6805 8.46156 14.0474 8.07103 13.6569L2.41418 8L8.07103 2.34315C8.46156 1.95262 8.46156 1.31946 8.07103 0.928932C7.68051 0.538408 7.04734 0.538408 6.65682 0.928932L0.29286 7.29289ZM2.69116 7L0.999966 7V9L2.69116 9V7Z" fill="black"/>
              </svg>
          </div>
    </div>
                    </div>
 </section> 
                        
  


<script>
  document.addEventListener('DOMContentLoaded', function() {
    var swiper = new Swiper(".main_cst_reel", {
      loop: true,
      slidesPerView: 1.5, // Show 4 slides
      spaceBetween: 20,
      navigation: {
        nextEl: ".swiper-button-next",
        prevEl: ".swiper-button-prev",
      },
      pagination: {
        el: ".swiper-pagination",
      },
      breakpoints:{
         750 :{
       slidesPerView: 2,     
        
       },
          1200 :{
       slidesPerView: 4,     
      
       }
      }
    });
  });
</script>
{% schema %}
{
  "name": "Highlight Reel Collection",
  "settings": [
    {
        "type": "text",
        "id": "heading",
        "label": "Heading"
      },
      {
        "type": "text",
        "id": "sub-text",
        "label": "Details"
      },
    {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 100,
        "step": 2,
        "unit": "px",
        "label": "Padding top",
        "default": 36
      }, {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 100,
        "step": 2,
        "unit": "px",
        "label": "Padding bottom",
        "default": 36
      }, {
        "type": "range",
        "id": "padding_top_mob",
        "min": 0,
        "max": 100,
        "step": 2,
        "unit": "px",
        "label": "Padding top Mobile",
        "default": 20
      }, {
        "type": "range",
        "id": "padding_bottom_mob",
        "min": 0,
        "max": 100,
        "step": 2,
        "unit": "px",
        "label": "Padding bottom Mobile",
        "default": 20
      }

  ],
  "blocks": [
  {
    "name": "Choose collection",
    "type": "Collection",
    "settings": [
      {
        "type": "url",
        "id": "url",
        "label": "Collection Image Url"
      },
      {
        "type": "image_picker",
        "id": "human_pic",
        "label": "Collection Image"
      },
      {
        "type": "collection",
        "id": "product-image",
        "label": "Collection ID"
      },
      {
        "type": "text",
        "id": "collection-title",
        "label": "Collection Title"
      },
      {
        "type": "image_picker",
        "id": "custom-img2",
        "label": "Custom Image"
      }
    ]
  }
],
  "presets": [
    {
      "name": "Highlight Reel Collection"
    }
  ]
  
}
{% endschema %}
{%- style -%}
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top | times: 0.5 | round: 0  }}px;
      padding-bottom: {{ section.settings.padding_bottom | times: 0.5 | round: 0  }}px;
    }
  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<style>
  .gift-layout-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 20px;
    gap: 10px;
  }
  .gift-pink-box img {
    width: 100%;
  }
  .gift-green-box img {
    width: 100%;
  }
  .gift-green-boxes {
    display: flex;
    width: 100%;
    gap: 10px;
  }
  .gift-green-box {
    flex: 1;
    display: flex;
  }
.title1 {
  margin: 0 0 15px 0;
  font-size: 36px;
  font-family: 'MinervaModern';
  width: 100%;
}
@media screen and (max-width: 750px) {
  .title1 {
    font-size: 26px;
  }
}
</style>

<div class="gift-layout-container">
 <div class="title1">{{ section.settings.category_text }}</div>
  <div class="gift-pink-box">
    <img src="{{ section.settings.main_image | img_url: 'master' }}"/>
  </div>
  <div class="gift-green-boxes">
    <div class="gift-green-box">
      <img src="{{ section.settings.left_side_image | img_url: 'master' }}"/>
    </div>
    <div class="gift-green-box">
      <img src="{{ section.settings.right_side_image | img_url: 'master' }}"/>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Gift Guide Column",
  "tag": "section",
  "disabled_on": {
  "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "text",
      "id": "category_text",
      "label": "Title"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 200,
      "step": 4,
      "unit": "px",
      "label": "padding top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 200,
      "step": 4,
      "unit": "px",
      "label": "padding bottom",
      "default": 36
    },
    {
      "type": "image_picker",
      "id": "main_image",
      "label": "Mobile image"
    },
    {
      "type": "image_picker",
      "id": "left_side_image",
      "label": "left side image"
    },
    {
      "type": "image_picker",
      "id": "right_side_image",
      "label": "right side image"
    }
  ],
  "presets": [
  {
    "name": "Gift Guide Column",
  }
]
}
{% endschema %}
